function solve(input) {
    let first = input[0]
    let second = input[1]
    let third = input[2]


    let concInput = first.concat(second)
    let count = 0
    let modifiedText = concInput.split('')
    let result = modifiedText

    for (let i = 0; i < modifiedText.length; i++) {
    
      let index = modifiedText[i]
        if (modifiedText[i] === 'a') {
            if (count === third.length) {
                count = 0
            }

            let lastIndex = third[count].toUpperCase()
            modifiedText.splice(i, 1, lastIndex)    
            
            count++
        }
        if (modifiedText[i] === 'e') {
            if (count === third.length) {
                count = 0
            }
            let lastIndex = third[count].toUpperCase()
            modifiedText.splice(i, 1, lastIndex)   
            
            count++
        }
        if (modifiedText[i] === 'o') {
            if (count === third.length) {
                count = 0
            }
            let lastIndex = third[count].toUpperCase()
            modifiedText.splice(i, 1, lastIndex)
            count++
        }
        if (modifiedText[i] === 'u') {
            if (count === third.length) {
                count = 0
            }
           // modifiedText.splice(i, 1, third[count])
            modifiedText.splice(i, 1, lastIndex)

            count++
        }
        if (modifiedText[i] === 'i') {
            if (count === third.length) {
                count = 0
            }
            let lastIndex = third[count].toUpperCase()
            modifiedText.splice(i, 1, lastIndex)
            count++
        }
    }

    let rev = []
    for (let j = 0; j < modifiedText.length; j++) {
        rev += modifiedText[j].split('')
        
    }
    let splitedArr = rev.split("").reverse().join("");
    console.log(`Your generated password is \n-> ${splitedArr}`)
}

solve([
    'ilovepizza',
    'ihatevegetables',
    'orange'
])

solve([
    'easymoneyeazylife',
    'atleasttencharacters',
    'absolute'
    ])
